---
interface Props {
    date: Date;
    locale?: string;
    iso?: boolean;
}
const { date, locale, iso } = Astro.props;
const formattedDate = iso ? date.toISOString().split('T')[0] : new Intl.DateTimeFormat(locale || navigator.language, {
  month: '2-digit',
  day: '2-digit',
  year: 'numeric',
}).format(date);
---

<time datetime={date.toISOString()} class="text-subText">
    {formattedDate}
</time>
